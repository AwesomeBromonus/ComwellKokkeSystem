@inherits LayoutComponentBase

<style>
    body {
        margin: 0;
        background-color: #003b4a;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-page {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #003b4a;
        padding: 1rem;
    }

    .login-content {
        width: 100%;
        max-width: 400px;
        color: white;
        text-align: center;
    }

    .login-logo {
        width: 240px; /* Øget fra 140px til 180px */
        margin: 0 auto 1.5rem auto;
        display: block;
    }

    .login-slogan {
        font-size: 1rem;
        opacity: 0.75;
        margin-bottom: 2rem;
    }

    .form-control {
        border-radius: 30px;
        padding: 1rem;
        font-size: 1rem;
        border: none;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 0 2px #007bff33;
        }

    .btn-login {
        background-color: white;
        color: #003b4a;
        border-radius: 30px;
        padding: 0.8rem 1.2rem;
        font-weight: 600;
        border: none;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #eeeeee;
        }

    label {
        color: #eeeeee;
        margin-left: 0.5rem;
    }

    .login-error {
        color: #ffc0c0;
        text-align: center;
        margin-top: 1rem;
    }

    .login-info {
        color: #aaa;
        font-size: 0.9rem;
        margin-top: 1rem;
        text-align: center;
    }
</style>

<div class="login-page">
    <div class="login-content">
        <img src="ComwellLogo2.png" alt="Comwell logo" class="login-logo" />
        
        @Body
    </div>
</div>
