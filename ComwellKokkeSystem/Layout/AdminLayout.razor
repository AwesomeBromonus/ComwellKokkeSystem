@inherits LayoutComponentBase
@inject UserState UserState
@inject NavigationManager NavManager
@implements IDisposable

<link href="css/Panel.css" rel="stylesheet" />
<link href="css/admin.css" rel="stylesheet" />

<div class="admin-full-container">
    @if (!UserState.IsLoggedInChecked)
    {
        <p class="text-muted text-center">⏳ Indlæser brugerdata...</p>
    }
    else if (!UserState.IsLoggedIn)
    {
        <p class="text-danger text-center">🔒 Du er ikke logget ind.</p>
    }
    else if (UserState.Role?.ToLower() != "admin")
    {
        <p class="text-danger text-center">🚫 Kun administratorer har adgang til denne side.</p>
    }
    else
    {
        <div class="admin-header">
            <h2 class="admin-title">@Title</h2>
            @if (!string.IsNullOrWhiteSpace(Subtitle))
            {
                <p class="admin-subtitle">@Subtitle</p>
            }
        </div>

        <div class="admin-content">
            @Body
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Subtitle { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        UserState.OnChange += StateHasChanged;

        if (!UserState.IsLoggedInChecked)
        {
            await UserState.InitializeAsync();
        }
    }

    public void Dispose()
    {
        UserState.OnChange -= StateHasChanged;
    }

    private async Task Logout()
    {
        await UserState.LogoutAsync();
        NavManager.NavigateTo("/login", true);
    }
}
