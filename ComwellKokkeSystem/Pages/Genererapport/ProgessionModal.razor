@using Modeller

@if (IsOpen && Elev != null && Elev.DelmaalList != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white p-6 rounded-lg w-full max-w-lg">
            <h3 class="text-lg font-bold mb-4">@Elev.Navn - Delmål</h3>
            <ul>
                @foreach (var dm in Elev.DelmaalList)
                {
                    <li>
                        <span class="font-semibold">@dm.Beskrivelse:</span>
                        <span class="@(dm.Status == "Fuldført" ? "text-green-600" : "text-red-600")">
                            @dm.Status
                        </span>
                    </li>
                }
            </ul>
            <button class="btn btn-secondary mt-4" @onclick="Close">Luk</button>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public StudentViewModel Elev { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private void Close() => OnClose.InvokeAsync();
}