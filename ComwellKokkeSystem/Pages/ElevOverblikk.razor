@page "/elevatorblik"               // Siden kan åbnes via /elevatorblik
@inject NavigationManager NavManager
@inject UserState UserState

@code {
    protected override void OnInitialized()
    {
        // Hvis man ikke er logget ind, sendes man til login
        if (!UserState.IsLoggedIn)
        {
            NavManager.NavigateTo("/login");
        }
        // Hvis brugeren ikke har rollen "elev", sendes de til forsiden
        else if (UserState.Role?.ToLower() != "elev")
        {
            NavManager.NavigateTo("/");
        }
    }
}

<!-- Alt herunder vises kun hvis brugeren er logget ind som elev -->

<div class="container mt-5">
    <div class="text-center">
        <h2 class="mb-3">🎓 Elev Overblik</h2>
        <h5 class="text-muted">Hej <strong>@UserState.Username</strong>, her er dit kommende overblik:</h5>
    </div>

    <!-- Første kort med elevens skema -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    📅 Kommende skema
                </div>
                <div class="card-body">
                    <ul>
                        <li>Mandag: Madlavning 08:00–12:00</li>
                        <li>Tirsdag: Teori 09:00–14:00</li>
                        <li>Onsdag: Praktik på hotel</li>
                        <li>...</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Andet kort med beskeder -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    📌 Noter & beskeder
                </div>
                <div class="card-body">
                    <p>🔔 Husk at aflevere arbejdsplanen til fredag.</p>
                    <p>📎 Næste praktikmøde: 14. maj kl. 13:00.</p>
                </div>
            </div>
        </div>
    </div>
</div>
